{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
