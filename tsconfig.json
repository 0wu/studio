{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["DOM"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "paths": {
      "@foxglove-studio/app/*": ["./app/*"]
    }
  },
  "include": ["app/index.tsx", "typings/react.d.ts"],
  "exclude": ["node_modules", "app/players/UserNodePlayer/nodeTransformerWorker/typescript/**/*"]
}
