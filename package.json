  "scripts": {
    "start": "yarn run electron .webpack",
    "build:prod": "yarn run webpack --mode production --progress",
    "build:dev": "yarn run webpack --mode development --progress",
    "serve": "yarn run webpack serve --mode development --progress",
    "lint": "TIMING=1 yarn run eslint --fix .",
    "lint:nofix": "TIMING=1 yarn run eslint .",
    "test": "yarn run jest",
    "test:watch": "yarn run jest --watch",
    "package:win": "yarn package --win",
    "package:darwin": "yarn package --mac",
    "package:linux": "yarn package --linux",
    "package": "electron-builder",
    "storybook": "yarn workspace @foxglove-studio/app run start-storybook",
    "build:storybook": "yarn workspace @foxglove-studio/app run build-storybook"
  },
  "workspaces": {
    "packages": [
      "app"
    ]
  },
